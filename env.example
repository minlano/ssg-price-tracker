# ========================================
# SSG 가격 추적기 환경 설정 파일
# ========================================

# ========================================
# 서버 설정
# ========================================
# Flask 서버 포트
FLASK_PORT=5000

# Flask 디버그 모드 (개발 시에만 True)
FLASK_DEBUG=False

# Flask 시크릿 키 (실제 운영 시에는 변경하세요)
FLASK_SECRET_KEY=your-secret-key-here

# ========================================
# 데이터베이스 설정
# ========================================
# SQLite 데이터베이스 파일 경로
DATABASE_PATH=ssg_products.db

# ========================================
# 크롤링 설정
# ========================================
# 크롤링 간격 (초)
CRAWLING_INTERVAL=10800

# 크롤링 타임아웃 (초)
CRAWLING_TIMEOUT=30

# 크롤링 재시도 횟수
CRAWLING_RETRY_COUNT=3

# 크롤링 딜레이 (초)
CRAWLING_DELAY=1

# ========================================
# 이메일 설정 (선택사항)
# ========================================
# SMTP 서버 설정
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# 발신자 이메일
SENDER_EMAIL=your-email@gmail.com

# 이메일 알림 활성화 (True/False)
EMAIL_NOTIFICATIONS_ENABLED=False

# ========================================
# 로깅 설정
# ========================================
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 로그 파일 경로
LOG_FILE_PATH=logs/app.log

# ========================================
# 캐시 설정
# ========================================
# 캐시 만료 시간 (초)
CACHE_EXPIRY=3600

# 캐시 최대 크기 (MB)
CACHE_MAX_SIZE=100

# ========================================
# API 설정
# ========================================
# API 요청 제한 (분당 요청 수)
API_RATE_LIMIT=100

# API 키 (필요한 경우)
API_KEY=your-api-key-here

# ========================================
# 보안 설정
# ========================================
# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# 세션 만료 시간 (분)
SESSION_EXPIRY=60

# ========================================
# 개발 환경 설정
# ========================================
# 개발 모드 (True/False)
DEVELOPMENT_MODE=True

# 테스트 데이터 생성 (True/False)
GENERATE_TEST_DATA=False

# ========================================
# 모니터링 설정
# ========================================
# 성능 모니터링 활성화 (True/False)
PERFORMANCE_MONITORING=False

# 메트릭 수집 활성화 (True/False)
METRICS_COLLECTION=False

# ========================================
# 알림 설정
# ========================================
# 가격 변동 알림 임계값 (%)
PRICE_CHANGE_THRESHOLD=5

# 알림 체크 간격 (분)
ALERT_CHECK_INTERVAL=30

# ========================================
# 사용법:
# 1. 이 파일을 .env로 복사하세요
# 2. 실제 값으로 변경하세요
# 3. 민감한 정보는 절대 Git에 커밋하지 마세요
# ======================================== 